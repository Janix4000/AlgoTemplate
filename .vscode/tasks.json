{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "g++_run",
            "command": "cat ${fileDirname}/args | ${fileDirname}/${fileBasenameNoExtension}",
            "problemMatcher": [
                "$gcc"
            ],
            "dependsOn": [
                "g++ build active file debug"
            ],
            "presentation": {
                "clear": true,
                "focus": true,
                "showReuseMessage": true
            },
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "g++_run_wout_input",
            "command": "${fileDirname}/${fileBasenameNoExtension}",
            "problemMatcher": [
                "$gcc"
            ],
            "dependsOn": [
                "g++ build active file debug"
            ],
            "presentation": {
                "clear": true,
                "focus": true,
                "showReuseMessage": true
            },
            "group": "test",
        },
        {
            "type": "shell",
            "label": "g++ build active file release",
            "command": "/usr/bin/g++",
            "args": [
                "-x",
                "c++",
                "-Wall",
                "-O2",
                "-static", 
                "-pipe",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "${file}",
                "-lm"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "g++ build active file debug",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "-Wall",
                "-Wextra",
                "-DDEBUG",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}