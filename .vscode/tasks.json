{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "g++_run",
            "command": "cat ${fileDirname}/args | ${fileDirname}/out/${fileBasenameNoExtension}.exe",
            "problemMatcher": [
                "$gcc"
            ],
            "dependsOn": [
                "g++_build"
            ],
            "presentation": {
                "clear": true,
                "focus": true,
                "showReuseMessage": true
            },
        },
        {
            "type": "shell",
            "label": "g++_run_wout_input",
            "command": "${fileDirname}/out/${fileBasenameNoExtension}.exe",
            "problemMatcher": [
                "$gcc"
            ],
            "dependsOn": [
                "g++_build"
            ],
            "presentation": {
                "clear": true,
                "focus": true,
                "showReuseMessage": true
            }
        },
        {
            "type": "cppbuild",
            "label": "g++_build",
            "command": "g++",
            "args": [
                "-g",
                "-Wall",
                "-Wextra",
                "${file}",
                "-o",
                "${fileDirname}/out/${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent",
                "clear": true,
                "focus": true,
                "showReuseMessage": false,
                "echo": false
            },
        }
    ]
}